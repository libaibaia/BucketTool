{
    "manifest_version": 3,
    "name": "BucketTool",
    "version": "0.0.1",
    "description": "BucketTool - 云存储安全检测浏览器扩展",
    "action": {
        "default_popup": "popup/index.html"
    },
    "icons": {
        "128": "icons/Secure.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    }
}